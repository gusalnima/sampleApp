<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutContent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/imgIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textSize="@dimen/text_45px"
            android:textColor="@color/text_4d4d4d"
            android:textStyle="bold"
            android:visibility="gone"/>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#d1d1d1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:textSize="@dimen/text_45px"
            android:textColor="@color/text_969696"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtMessage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="3dp"
            android:gravity="left"
            android:textSize="@dimen/text_45px"
            android:textColor="@color/text_969696"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/layoutInnerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAlpha"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_45px"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnBeta"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_45px"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnGamma"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_45px"
                android:textStyle="bold"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnDelta"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_45px"
                android:textStyle="bold"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="69dp"
        android:layout_height="92dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
